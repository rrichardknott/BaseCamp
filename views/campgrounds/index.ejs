  <div id="index-container">
    <% for (let campground of campgrounds){%>
    <div class="card mb-5" id="index-camp-container" >
            <!-- <div class="row"> -->
              <div>
                <% if(campground.images.length) {%>
                <img
                  id="index-images"
                  class="img-fluid"
                  alt=""
                  src="<%=campground.images[0].url%>"
                />
                <% } else { %>
                <img
                  class="img-fluid"
                  src="https://res.cloudinary.com/dkjeuhqog/image/upload/v1639537500/YelpCamp/q7vhmxy6eicswaq3fhko.jpg"
                  alt="image"
                />
                <% } %>
              </div>
              <div>
                <div>
                  <h5 id="camp-title"><%= campground.title %></h5>
                  <p id="camp-description"><%= campground.description %></p>
                  <p>
                    <small class="text-muted"><%= campground.location%></small>
                  </p>
                  <a id="card-button" href="/campgrounds/<%=campground._id%>"
                    >View Campsite</a
                  >
                </div>
              </div>
            <!-- </div> -->
          </div>
          <% }%>
        </div>
     



